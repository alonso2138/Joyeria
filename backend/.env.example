# Backend Environment Variables

# MongoDB Configuration
MONGO_URI=mongodb://admin:your_secure_password@localhost:27017/joyeria_aurora?authSource=admin

# JWT Secret - Use a strong random string (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here_use_strong_random_string

# Admin Password for Database Seeding
ADMIN_PASSWORD=your_secure_admin_password

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key
RESEND_FROM=noreply@yourdomain.com
EMAIL_FROM=noreply@yourdomain.com
SMTP_FROM=noreply@yourdomain.com

# Telegram Notifications (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Server Configuration
PORT=5000
NODE_ENV=development
